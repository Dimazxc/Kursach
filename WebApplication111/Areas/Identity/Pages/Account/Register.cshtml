@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-md-center">
    <div class="col-md-6">
        <div class="card">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div style="text-align: center" class="card-header">
                    <i class="fas fa-user-circle fa-8x text-secondary"></i>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Phone"></label>
                        <input asp-for="Input.Phone" class="form-control" placeholder="Enter mobile phone" />
                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Repeat password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-danger btn-block"><i class="fas fa-user-plus">&nbsp</i>Sign Up</button>
                </div>
            </form>
            <section>
                @{
                    if (Model.ExternalLogins != null)
                    {
                        Dictionary<int, string[]> logins = new Dictionary<int, string[]>
                        {
                            [1] = new string[] { "fab fa-facebook-f", "btn facebook-btn social-btn" },
                            [2] = new string[] { "fab fa-google", "btn google-btn social-btn" },

                        };
                        int counterLog = 1;
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div style="text-align: center">
                            <p>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button class="@logins[counterLog][1]" type="submit" name="provider" value="@provider.Name"><span><i class="@logins[counterLog][0]">&nbsp</i> Sign Up with @provider.DisplayName</span> </button>
                                    counterLog++;
                                }
                            </p>
                        </div>
                    </form>
                        }
                    }
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
